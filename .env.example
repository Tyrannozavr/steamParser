# ============================================
# Telegram Bot Configuration
# ============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Получите Chat ID (ваш ID или ID канала)
# Для личных сообщений: используйте @userinfobot
# Для канала: добавьте бота в канал и получите ID через getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# Database Configuration
# ============================================
# Путь к файлу базы данных SQLite
DATABASE_PATH=steam_monitor.db

# ============================================
# Application Settings
# ============================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Директория для логов
LOG_DIR=logs

# ============================================
# Proxy Settings (опционально)
# ============================================
# Задержка по умолчанию между запросами для прокси (секунды)
# Прокси можно добавлять через бота командой /add_proxy
PROXY_DELAY_DEFAULT=1.0
